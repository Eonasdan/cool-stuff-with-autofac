@model CoolStuff.Business.Models.RateQuote
@{
    ViewData["Title"] = "Home Page";
    var quote = ViewBag.Quote;
}

@if (quote != null && quote > 0)
{
    <div class="alert alert-success">Quote for $@quote</div>
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}


<form asp-action="Index">
    <div class="mb-3">
        <label asp-for="Weight" class="form-label">Weight</label>
        <input asp-for="Weight" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="SendingZip" class="form-label">Sending Zip</label>
        <input asp-for="SendingZip" class="form-control"/>

    </div>

    <div class="mb-3">
        <label asp-for="ReceiverZip" class="form-label">Receiver Zip</label>
        <input asp-for="ReceiverZip" class="form-control"/>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="Shipper" checked value="FedEx">
        <label class="form-check-label" asp-for="Shipper">
            FedEx
        </label>
    </div>

    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Shipper" value="USPS">
            <label class="form-check-label" asp-for="Shipper">
                USPS
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>